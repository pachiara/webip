<div class="container-fluid">
	
<% if !user_signed_in? and !alert.nil? %>
  <div class="alert alert-danger">
    <a class="close" data-dismiss="alert">&#215;</a>
    <div>
      <b> <%= t('actions.attention') %>    
      <label class="fatal_error"><%= alert %></label></b>
    </div>
    <%= devise_error_messages! %>
  </div>
<% end %>
<div class="row col-md-12">
  <div class="col-md-offset-2 col-md-2 col-sm-3">
    <h2><%=t('actions.edit')%> <%= resource_name.to_s.humanize %></h2>
  </div>
</div>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

<div class="row col-md-12">
  <div class="col-md-offset-2 col-md-2 col-sm-3">
    <%= f.input :email, input_html: { autofocus: true } %>	
  </div>
</div>
<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div class="row col-md-12">Attualmente in attesa di conferma per: <%= resource.unconfirmed_email %></div>
<% end %>
<div class="row col-md-12">
  <div class="col-md-offset-2 col-md-2 col-sm-3">
    <%= f.input :password, input_html: { autocomplete: "off" } %>
  </div>
  <div class="col-md-3 col-sm-4">
    <i>(lascare in bianco per non cambiarla)</i>
  </div>
</div>
<div class="row col-md-12">
  <div class="col-md-offset-2 col-md-2 col-sm-3">
    <%= f.input :password_confirmation %>		
  </div>
</div>
<div class="row col-md-12">
  <div class="col-md-offset-2 col-md-2 col-sm-3">
    <%= f.input :current_password %>
  </div>
  <div class="col-md-3 col-sm-4">
    <i>(occorre inserire la password attuale per confermare i cambiamenti)</i>
  </div>  	
</div>
<br />
<div class="row col-md-12">
<div class="col-md-offset-2 col-md-2 col-sm-3">
<%= button_tag(type: 'submit', class: "btn btn-primary btn-lg") do %>
   <span class="glyphicon glyphicon-ok glyphicon-inverse"></span> <%= t('actions.update') %>  
 <% end %>
</div>
</div>
<% end %>
<div class="row col-md-12">
  <div class="col-md-offset-2 col-md-2 col-sm-3">
    <h2><%=t('actions.destroy')%> <%= resource_name.to_s.humanize %></h2>
  </div>
</div>
<div class="row col-md-12">
  <div class="col-md-offset-2 col-md-2 col-sm-3">		
	<%= button_to "Elimina", registration_path(resource_name), :data => { :confirm => "Sei sicuro di voler eliminare ?" }, :method => :delete, :class => "btn btn-default btn-lg" %></p>
  </div>
</div>

<%= link_to :back, :class => "btn btn-default btn-lg", :title => t('actions.back'), :alt => t('actions.back') do %>
  <span class="glyphicon glyphicon-arrow-left"></span> <%= t('actions.back') %>
<% end %>

</div>
<br />