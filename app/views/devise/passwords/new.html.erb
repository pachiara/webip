<div id="container-fluid" >

<div class="row col-md-offset-2 col-md-8">
  <h2><%=t('devise.actions.forgot_password')%></h2>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
<%= f.error_notification %>
<div class="row col-md-offset-2 col-md-3">
  <div class="form-group">
    <%= f.input :email, :required => true, :autofocus => true %>
  </div>
<br/><br/>
  <div class="form-group">
    <%= button_tag(type: 'submit', class: "btn btn-primary btn-lg") do %>
      <span class="glyphicon glyphicon-ok glyphicon-inverse"></span> <%= t('devise.actions.send_reset_instructions') %>
    <% end %>
  </div>
</div>
<% end %>

</div>
