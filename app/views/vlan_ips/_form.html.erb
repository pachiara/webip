<%= form_for @vlan_ip, :url => vlan_vlan_ip_path do |f| %>

  <% if @vlan_ip.errors.any? %>
    <div class="alert_box">
      <%= image_tag("icone/18/ico_warning_18.gif", :alt => "Attenzione: errore!") %>
      <label> <%= t('actions.attention') %>
        <%= pluralize(@vlan_ip.errors.count, t('activerecord.errors.messages.error'), t('activerecord.errors.messages.errors')) %>:
      </label>
      <% @vlan_ip.errors.full_messages.each do |msg| %>
        <label class="fatal_error"><%= msg %></label>
      <% end %>
    </div>
  <% end %>

<div class="riga">
  <div class="field">
    <%= f.number_field :vlan_id, :size => 4, :class => "numero", :hidden => true %>
  </div>
  <div class="col_33">
  <div class="field">
    <%= f.label :ip %><br />
    <%= f.text_field :ip, :size => 15, :placeholder => 'xxx.xxx.xxx.xxx', :readonly => true %>
  </div>
  </div>
  <div class="col_33">
  <div class="field">
    <%= f.label :hostname %><br />
    <%= f.text_field :hostname, :size => 16 %>
  </div>
  </div>
  <div class="col_33">
  <div class="field">
    <%= f.check_box :status, :hidden => true %>
  </div>
  </div>
</div>  
<div class="riga">
  <div class="col_100">  
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, :cols => 150, :rows => 10 %>
  </div>
  </div>
</div>  

  
  <div class="area_rispetto">
    <%= link_to t('actions.back'), vlan_vlan_ips_path, :class => "pulsante" %>
    <%= f.submit :class => "pulsante" %>
  </div>
  <div class="content_closer_thin"> </div>
  
<% end %>
