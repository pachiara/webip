<div id="area_contenuti">
<%= will_paginate @vlans, :renderer => BootstrapPagination::Rails %>
<table>
  <tr>
    <th class='centrato'>Vlan</th>
    <th>Network</th>
    <th>Netmask</th>
    <th>Host IP min</th>
    <th>Host IP max</th>
    <th>Hosts num</th>
    <th>Assegnati</th>
    <th>Liberi</th>
    <th>Gateway</th>
    <th>Dns</th>
    <th><%= t('activerecord.attributes.vlan.description') %></th>
    <th class='centrato' colspan=2><%= t('actions.actions') %></th>
  </tr>

<% @vlans.each_with_index do |vlan, index| %>
  <tr
    <% if index.odd? %> class='riga_alternata' <% end %>
  >
    <td class='centrato'><%= link_to vlan.vlan_code, vlan_vlan_ips_path(vlan) %></td>
    <td><%= vlan.network %></td>
    <td><%= vlan.netmask %></td>
    <td><%= vlan.host_min %></td>
    <td><%= vlan.host_max %></td>
    <td><%= vlan.hosts_num %></td>
    <% if vlan.hosts_count %>
    <td style="color: red"><%= vlan.used %></td>
    <td style="color: green"><%= vlan.free %></td>
    <% end %> 
    <td><%= vlan.gateway %></td>
    <td><%= vlan.dns %></td>
    <td><%= vlan.description %></td>
    <td class='centrato'>
    	<%= link_to image_tag("icone/18/ico_modifica_18.gif", :border=>0), edit_vlan_path(vlan) %>   
    	<%= link_to t('actions.edit'), edit_vlan_path(vlan) %></td>
    <td class='centrato'>
    	<%= link_to image_tag("icone/18/ico_eliminaDoc_18.gif", :border=>0), vlan, method: :delete, data: { confirm: t('actions.are_you_sure') } %>   
    	<%= link_to t('actions.destroy'), vlan, method: :delete, data: { confirm: t('actions.are_you_sure') } %></td>
  </tr>
<% end %>
</table>

<div class="toolbar_tabella">
<ul class="tool_utility">
<li>
<%= link_to image_tag("plus_24.png", :border=>0), new_vlan_path %>
<%= link_to t('actions.new') + " " + t('activerecord.models.vlan'), new_vlan_path %>
</li>
</ul>
</div>

</div>